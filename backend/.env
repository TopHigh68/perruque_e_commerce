# Configuration du serveur
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5174

# Base de données MongoDB
MONGODB_URI=mongodb://localhost:27017/luxewig
# Ou pour MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/luxewig

# JWT Secret (générer une clé sécurisée en production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Upload de fichiers
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Email (optionnel pour les notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# WhatsApp API (optionnel)
WHATSAPP_TOKEN=your-whatsapp-business-api-token
WHATSAPP_PHONE_ID=your-phone-number-id